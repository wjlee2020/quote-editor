<header class="navbar" style="display: flex;
  align-items: center;
  box-shadow: var(--shadow-large);
  padding: var(--space-xs) var(--space-m);
  margin-bottom: var(--space-xxl);
  background-color: (var(--color-white));">
  <% if user_signed_in? %>
    <div class="navbar__brand" style="font-weight: bold;
    font-size: var(--font-size-xl);
    color: var(--color-text-header);">
      <%= current_company.name unless !current_company %>
    </div>
    <div class="navbar__name" style="font-weight: bold;
    margin-left: auto;
    margin-right: var(--space-s);
    color: var(--color-text-header);">
      <%= current_user.name %>
    </div>
    <%= button_to "Sign out",
                  destroy_user_session_path,
                  method: :delete,
                  class: "btn btn--dark" %>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn--dark navbar__right" %>
  <% end %>
</header>